{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "variable-name": [
      true,
      "allow-snake-case",
      true,
      "allow-pascal-case"
    ],
    "max-classes-per-file": 3,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "max-line-length": [
      true,
      140
    ]
  },
  "rulesDirectory": []
}